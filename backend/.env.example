# ============================================
# SLABDASH - ENVIRONMENT CONFIG
# ============================================

NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/slabdash

# JWT
JWT_SECRET=change-this-to-a-random-64-character-string-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# PSA API
PSA_API_BASE=https://api.psacard.com/publicapi

# Default Email Service (for companies not using custom SMTP)
# These settings are used when use_custom_smtp is false
# Recommended: Set up a SendGrid or Mailgun account for production
DEFAULT_SMTP_HOST=smtp.sendgrid.net
DEFAULT_SMTP_PORT=587
DEFAULT_SMTP_SECURE=false
DEFAULT_SMTP_USER=apikey
DEFAULT_SMTP_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=notifications@slabdash.com
DEFAULT_FROM_NAME=SlabDash Notifications
