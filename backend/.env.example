# ============================================
# SLABDASH - ENVIRONMENT CONFIG
# ============================================

NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/slabdash

# JWT
JWT_SECRET=change-this-to-a-random-64-character-string-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# PSA API
PSA_API_BASE=https://api.psacard.com/publicapi

# Default Email Service (for companies not using custom SMTP)
# These settings are used when use_custom_smtp is false
# Uses Mailgun HTTP API (works on Railway, no SMTP ports needed)
DEFAULT_MAILGUN_API_KEY=your-mailgun-api-key-here
DEFAULT_MAILGUN_DOMAIN=slabdash.app
DEFAULT_FROM_EMAIL=slabdashllc@slabdash.app
DEFAULT_FROM_NAME=SlabDash
